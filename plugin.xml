<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="cordova-heartbeat2" version="0.0.26">
  <name>HeartbeatPlugin</name>
  <description>Heartbeat plugin</description>

  <js-module src="www/heartbeat.js" name="Heartbeat">
    <clobbers target="Heartbeat"/>
  </js-module>

  <!-- android -->
  <platform name="android">
    <config-file target="config.xml" parent="/*">
      <feature name="Heartbeat">
        <param name="android-package" value="nl.trimbos.eva.HeartbeatPlugin"/>
      </feature>
    </config-file>
    <framework src="src/android/HeartbeatPlugin-java17.gradle" custom="true" type="gradleReference" />
    <source-file src="src/android/libs/heartbeatandroid.aar" target-dir="libs" framework="true"/>
    <source-file src="src/android/HeartbeatPlugin.java" target-dir="src/nl/trimbos/eva"/>
    <source-file src="src/android/build-extras.gradle" target-dir="."/>
    <config-file target="AndroidManifest.xml" parent="/manifest">
      <uses-feature android:name="android.hardware.camera" />
      <uses-feature android:name="android.hardware.camera.flash" />
      <uses-feature android:name="android.hardware.camera.setParameters" />
      <uses-permission android:name="android.permission.CAMERA" />
    </config-file>
  </platform>

  <!-- ios -->
  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="Heartbeat">
        <param name="ios-package" value="HeartbeatPlugin"/>
      </feature>
    </config-file>
    <header-file src="src/ios/HeartbeatPlugin.h" target-dir="HeartbeatPlugin"/>
    <source-file src="src/ios/HeartbeatPlugin.m" target-dir="HeartbeatPlugin"/>
    <framework src="src/ios/Frameworks/HeartbeatLib.framework" custom="true"/>
    <preference name="CAMERA_USAGE_DESCRIPTION" default=" "/>
    <config-file target="*-Info.plist" parent="NSCameraUsageDescription">
      <string>Measure your heartbeat by using the camera and flash.</string>
    </config-file>
  </platform>

</plugin>
